sync {
      default.rsync,
      source="<%= @path %>",
            target="<%= @remoteserver %>:<%= @path %>",
            rsync = {
                    archive = true,
                    compress = true,
                    acls = true,
                    verbose = true,
                    rsh = "/usr/bin/ssh -p <%= @sshd_port %> -o StrictHostKeyChecking=no" 
            }
}
